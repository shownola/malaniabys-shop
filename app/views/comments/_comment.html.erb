<div class="container">
  <div class="row">
    <div class="col-md-2">
      <section class="user_info center">
        <%= gravatar_for(comment.user, size: 40) %>
      </section>
    </div>
    <div class="col-md-8 well">
      <p><%= comment.description %></p>
      <p><span class="quiet">
        <small>Created: <%= time_ago_in_words(comment.created_at) %> ago by
          <i><%= comment.user.email %></i>
        </small>
      </span></p>
      <p><%= comment.created_at %></p>
    </div>

  </div>
</div>
