<div class="container-fluid">
  <div class="display-3 text-center">All Products</div>
  <div class="container image-container">

      <div class="row">
        <% @products.each do |product| %>
          <div class="col-md-3">
            <div class="product">
              <div class="image_wrapper">
                <%= link_to product do %>
                  <%= image_tag(product.image.url, size: '200x250') if product.image? %>
                <% end %>
              </div>
              <div class="row">
                <h4 class="text-center">
                  <%= link_to truncate(product.title, length: 20), product, class: 'title-link pl-5' %>
                  <span class="text-right price"><%= number_to_currency(product.price) %></span>
                </h4>
                <span class="quiet text-center pl-4 created"><small>Created <%= time_ago_in_words(product.created_at) %> ago | <%= pluralize(product.comments.count, 'Comment') %></small></span>

              </div>
            </div>
          </div>
        <% end %>
      </div>

  </div>



</div>
